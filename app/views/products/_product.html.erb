<div class="flex flex-col w-full max-w-sm bg-white rounded-lg shadow-md dark:bg-gray-600 transform transition duration-500 hover:scale-105 dark:border-gray-700 overflow-hidden">
<div>
    <div x-data="carousel()" class="relative flex flex-col">
    <%= link_to product do %>
      <img class="h-64 w-full object-cover object-center" :src="images[selected]" alt="mountains"/>
    <% end %>
        <button
          @click="if (selected > 0 ) {selected -= 1} else { selected = images.length - 1 }"
          class="absolute h-8 w-8 left-1 inset-y-1/2 rounded-full group bg-white/10 transition duration-300 transform hover:scale-125 cursor-pointer"
        >
          <span class="hidden group-hover:block text-gray-50">
            &larr;
          </span>
        </button>
      <button
        @click="if (selected < images.length - 1  ) {selected += 1} else { selected = 0 }"
        class="absolute h-8 w-8 right-1 inset-y-1/2 rounded-full group bg-white/10 transition duration-300 transform hover:scale-125 cursor-pointer"
      >
        <span class="hidden group-hover:block text-gray-50">
        &rarr;
        </span>
      </button>

      <div class="absolute bottom-0 w-full p-4 flex justify-center space-x-2">
        <template x-for="(image,index) in images" :key="index">
          <button
            @click="selected = index"
            :class="{'bg-gray-300': selected == index, 'bg-gray-500': selected != index}"
            class="h-2 w-2 rounded-full hover:bg-gray-300 ring-2 ring-gray-300"
          ></button>
        </template>
      </div>
    </div>
</div>
