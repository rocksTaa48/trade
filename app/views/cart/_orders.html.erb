<div class="mb-50">
<% current_user.cart.orders.each do |order| %>
  <% product = order.product %>
  <div id="<%= "cart-#{product.id}" %>">
    <div style="display:flex;justify-content:space-between;margin: 0em 5em;">
      <strong>Name:</strong>
      <%= product.title %>
      <strong>Description:</strong>
      <%= product.body %>
      <strong>Price:</strong>
      <%= product.price %>
      <%= form_with(url: cart_add_path) do |f| %>
        <%= f.hidden_field :id, value: product.id %>
        <%= f.number_field :quantity, value: order.quantity, min: 0 %>
        <%= f.submit "Add To Cart" %>
      <% end %>
      <%= form_with(url: cart_remove_path) do |f| %>
        <%= f.hidden_field :id, value: order.id %>
        <%= f.submit "X" %>
      <% end %>

    </div>
  </div>
<% end %>
</div>